{
    "manifest_version": 3,
    "name": "inFilter - Linkedin UI Cleaner",
    "version": "2.2.0",
    "icons": {
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "description": "Declutter LinkedIn by removing unwanted posts and applying cleaner UI.",
    "permissions": [
      "storage"
    ],
    "host_permissions": [
      "*://*.linkedin.com/*"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["*://*.linkedin.com/*"],
        "js": ["content.js"]
      }
    ],
    "background": {
      "service_worker": "background.js"
    }
  }
